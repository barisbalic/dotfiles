
alias gst="git status"
alias ga="git add *"
alias gaa="git add ."
alias gl="git pull"
alias gp="git push"
alias gc="git commit -v"
alias gch="git checkout -v"
alias gca="git commit -v -a"
alias grt="git reset --hard head"
alias gb="git branch"
alias gba="git branch -a"
alias glg="git log --oneline --decorate"

alias go="bundle open"
alias gi="gem install"
alias gu="gem uninstall"
alias gls="gem list -r"   # list remote gems

alias bi="bundle install"
alias bu="bundle update"
alias bp="bundle package"

alias ru="rackup"
alias m="mate"
alias rpc="rspec -c --format doc "
alias spec="spec -c"
alias mhosts="sudo mate /etc/hosts"
alias mbash="mate ~/.bash_profile"
alias rebash="source ~/.bash_profile"

alias capd="git push && deploy"

alias rls="rails s"
alias rlc="rails c"
alias rlg="rails g"
alias rgm="rails g migration"

alias topram="/usr/bin/top -R -F -s 5 -o rsize"
alias topcpu="/usr/bin/top -R -F -s 2 -o cpu"
alias is="ps aux | grep -v grep | grep"
alias cpr="cp -R"
alias lsl="ls -lGFh"
alias ll="ls =l"

# Creates indexes for 'locate' in OSX
alias updatedb=/usr/libexec/locate.updatedb